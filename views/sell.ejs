<%- include("partials/header.ejs"); %>

<form   action="/lands" method="POST" class="sellForm">
  <!-- length -->
 <div class="form-group">
    <label for="length">Length</label>
    <input type="text" name="length"  required>
  </div>
  <!-- Breadth -->
  <div class="form-group">
    <label for="breadth">Breadth</label>
    <input type="text" name="breadth" required>
  </div>
  <!-- square feet -->
  <div class="form-group">
    <label for="square_feet">Square Feet</label>
    <input type="text" name="square_feet" >
  </div>
  <!-- type of conversion -->
  <label for="type">Type of conversion:</label>
  <select name="conversion">
    <option value=""></option>
    <option value="Zone1">Zone 1</option>
    <option value="Zone2">Zone 2</option>
    <option value="Zone3">Zone 3</option>
    <option value="Zone4">Zone 4</option>
    <option value="industrialConverson">industrial Conversion</option>
    <option value="warehouseconversion">Warehouse conversion</option>
    <option value="freezone">Free zone</option>
  </select> <br>

  <!-- type of sites -->
  <label for="type">Type of sites:</label><br>
  <select name="type">
    <option value=""></option>
    <option value="Bda">BDA</option>
    <option value="Dc">DC</option>
    <option value="BMRDA">BMRDA</option>
    <option value="NPA">NPA</option>
    <option value="Residential">Residential</option>
    <option value="A-KATHA">A-KATHA</option>
    <option value="B-KATHA">B-KATHA</option>
    <option value="E-KATHA">E-KATHA</option>
  </select> <br>

  <!-- estimated price -->
  <div class="form-group">
    <label for="price">Estimated Price</label>
    <input type="text" name="price">
  </div>
  <!-- locality -->
  <div class="form-group">
    <label for="locality">Locality</label>
    <input type="text" name="locality">
  </div>
   <!-- pincode -->
   <div class="form-group">
    <label for="pincode">Pincode</label>
    <input type="text" name="pincode" maxlength="6">
  </div>
   <!-- address -->
   <div class="form-group">
    <label for="Address"></label>Address
    <input type="text" name="address">
  </div>
   <label>Images</label>
   <button id="upload_widget" class="cloudinary-button" type="button">Upload files</button>
   <input type="submit" value="submit" class="sell-submit">
</form>


